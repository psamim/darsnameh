
<table class="table table-hover">
  <tr>
    <th> Title </th>
    <th width="10%"></th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td> <%= link_to course.title, course %></td>
      <td> <%= link_to raw("<span class='glyphicon glyphicon-remove'></span>"), course, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to raw("<span class='glyphicon glyphicon-pencil'></span>"), [:edit, course]  %> </td>
    </tr>
  <% end %>
</table>
